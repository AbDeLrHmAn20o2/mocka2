# =================================
# MOCKO DESIGNS - CONSOLIDATED SERVER
# Environment Configuration
# =================================

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/mocko-designs

# Frontend URLs (Update for production)
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_PRODUCTION=https://mocko-designs.vercel.app

# Google Authentication (OAuth 2.0)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Cloudinary Configuration (Image Upload Service)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# PayPal Configuration (Payment Processing)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_PRODUCT_ID=MOCKO_DESIGNS_PREMIUM

# AI Image Generation Services
# OpenAI DALL-E (Primary)
OPENAI_API_KEY=your_openai_api_key

# Stability AI (Fallback)
STABILITY_API_KEY=your_stability_api_key

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://mocko-designs.vercel.app

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_REQUEST=5

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_paypal

# =================================
# PRODUCTION OVERRIDES
# =================================
# When deploying to production, update these values:
# - NODE_ENV=production
# - MONGO_URI=your_production_mongodb_connection_string
# - FRONTEND_URL=https://your-production-domain.com
# - All API keys with production values
# - Set strong secrets and passwords
